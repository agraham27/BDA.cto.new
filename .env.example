# ==============================================
# APPLICATION CONFIGURATION
# ==============================================

# Node Environment (development, production, staging)
NODE_ENV=production

# Application URLs
FRONTEND_URL=https://hocvienbigdipper.com
BACKEND_URL=https://api.hocvienbigdipper.com

# ==============================================
# BACKEND/API CONFIGURATION
# ==============================================

# Server Configuration
PORT=5000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=https://hocvienbigdipper.com

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production
SESSION_MAX_AGE=86400000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ==============================================
# DATABASE CONFIGURATION
# ==============================================

# PostgreSQL Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/hocvienbigdipper
DB_HOST=localhost
DB_PORT=5432
DB_NAME=hocvienbigdipper
DB_USER=hocvienbigdipper_user
DB_PASSWORD=your-secure-database-password

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10

# ==============================================
# REDIS CONFIGURATION (Optional - for caching/sessions)
# ==============================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# ==============================================
# FILE STORAGE CONFIGURATION
# ==============================================

# Upload Configuration
UPLOAD_DIR=/var/www/hocvienbigdipper/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,image/webp,application/pdf

# Static Files
STATIC_DIR=/var/www/hocvienbigdipper/public

# ==============================================
# EMAIL CONFIGURATION
# ==============================================

# SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@hocvienbigdipper.com

# ==============================================
# SECURITY CONFIGURATION
# ==============================================

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# CSRF Protection
CSRF_SECRET=your-csrf-secret-key

# Encryption
ENCRYPTION_KEY=your-32-character-encryption-key

# ==============================================
# THIRD-PARTY SERVICES
# ==============================================

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-southeast-1
AWS_S3_BUCKET=

# Cloudinary (Optional - for image hosting)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=https://api.hocvienbigdipper.com/auth/google/callback

# Facebook OAuth (Optional)
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_CALLBACK_URL=https://api.hocvienbigdipper.com/auth/facebook/callback

# ==============================================
# LOGGING CONFIGURATION
# ==============================================

# Log Level (error, warn, info, debug)
LOG_LEVEL=info
LOG_DIR=/var/log/hocvienbigdipper

# ==============================================
# MONITORING & ANALYTICS
# ==============================================

# Sentry (Error Tracking)
SENTRY_DSN=

# Google Analytics
GA_TRACKING_ID=

# ==============================================
# BACKUP CONFIGURATION
# ==============================================

# Backup Storage
BACKUP_DIR=/var/backups/hocvienbigdipper
BACKUP_RETENTION_DAYS=30

# S3 Backup (Optional)
BACKUP_S3_BUCKET=
BACKUP_S3_PREFIX=backups/

# ==============================================
# NEXT.JS CONFIGURATION
# ==============================================

# Next.js Build
NEXT_TELEMETRY_DISABLED=1
NEXT_PUBLIC_API_URL=https://api.hocvienbigdipper.com
NEXT_PUBLIC_SITE_URL=https://hocvienbigdipper.com
