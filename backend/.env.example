# Backend Environment Variables
# Copy this file to .env and update with your values

# Application
NODE_ENV=development
PORT=5000
HOST=localhost

# CORS Configuration
CORS_ORIGIN=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/hocvienbigdipper

# JWT Configuration
JWT_ACCESS_SECRET=your-access-token-secret-change-me
JWT_REFRESH_SECRET=your-refresh-token-secret-change-me
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-this-in-production

# Token Lifetimes (hours)
EMAIL_VERIFICATION_TOKEN_EXPIRES_IN_HOURS=24
PASSWORD_RESET_TOKEN_EXPIRES_IN_HOURS=2

# Mailer (SMTP)
SMTP_HOST=smtp.mailtrap.io
SMTP_PORT=2525
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM_EMAIL=no-reply@hocvienbigdipper.com
SMTP_FROM_NAME=Hoc Vien Big Dipper

# Application URLs
APP_URL=http://localhost:3000

# File Storage
UPLOAD_DIR=/var/www/uploads
MAX_FILE_SIZE=524288000
MAX_VIDEO_SIZE=2147483648
MAX_IMAGE_SIZE=10485760
MAX_DOCUMENT_SIZE=52428800
SIGNED_URL_SECRET=change-me-to-secure-value
SIGNED_URL_EXPIRY=3600
CHUNK_SIZE=1048576

# Logging
LOG_LEVEL=debug
