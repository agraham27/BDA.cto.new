{
  "name": "hocvienbigdipper-monorepo",
  "version": "1.0.0",
  "private": true,
  "description": "Hoc Vien Big Dipper - Full-stack application with Next.js frontend and Express backend",
  "workspaces": [
    "frontend",
    "backend"
  ],
  "scripts": {
    "dev": "npm-run-all --parallel dev:frontend dev:backend",
    "dev:frontend": "npm run dev --workspace=frontend",
    "dev:backend": "npm run dev --workspace=backend",
    "build": "npm-run-all build:backend build:frontend",
    "build:frontend": "npm run build --workspace=frontend",
    "build:backend": "npm run build --workspace=backend",
    "start": "npm-run-all --parallel start:frontend start:backend",
    "start:frontend": "npm run start --workspace=frontend",
    "start:backend": "npm run start --workspace=backend",
    "lint": "npm-run-all --parallel lint:frontend lint:backend",
    "lint:frontend": "npm run lint --workspace=frontend",
    "lint:backend": "npm run lint --workspace=backend",
    "lint:fix": "npm-run-all --parallel lint:fix:frontend lint:fix:backend",
    "lint:fix:frontend": "npm run lint:fix --workspace=frontend",
    "lint:fix:backend": "npm run lint:fix --workspace=backend",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,scss,md}\"",
    "typecheck": "npm-run-all --parallel typecheck:frontend typecheck:backend",
    "typecheck:frontend": "npm run typecheck --workspace=frontend",
    "typecheck:backend": "npm run typecheck --workspace=backend",
    "test": "npm-run-all --parallel test:frontend test:backend",
    "test:frontend": "npm run test --workspace=frontend --if-present",
    "test:backend": "npm run test --workspace=backend --if-present",
    "clean": "npm-run-all clean:frontend clean:backend clean:root",
    "clean:frontend": "cd frontend && rm -rf .next node_modules",
    "clean:backend": "cd backend && rm -rf dist node_modules",
    "clean:root": "rm -rf node_modules",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.4",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.1.1",
    "prisma": "^6.18.0",
    "typescript": "^5.3.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --max-warnings=0",
      "prettier --write"
    ],
    "*.{json,md,css,scss,html}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@prisma/client": "^6.18.0"
  }
}
